<div class="container" ng-app="PlayerCenter">
  <h1>Tournament Outing</h1>
    <h4>Player Registration</h4>

  <div ng-controller="playersController">
    <div class="well">
      <h4>Add a new Player</h4>
      <form ng-submit="addPlayer()">
        <div class="row">
          <div class="col-xs-6">
            <input type="text" ng-model="newPlayer.first_name" class="form-control" placeholder="First Name" />
          </div>
          <div class="col-xs-6">
            <input type="text" ng-model="newPlayer.last_name" class="form-control" placeholder="Last Name" />
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12">
            <br />
            <input type="text" ng-model="newPlayer.reason" class="form-control" placeholder="Team" />
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12 text-center">
            <br />
            <input type="Submit" value="Add Player" class="btn btn-primary" />
          </div>
        </div>
      </form>
    </div>
    <h3>Player List</h3>
    <hr />
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Tee Time or Group</th>
          <th>&nbsp;</th>
        </tr>
      </thead>   
      <tbody>
        <tr ng-show="!players.length">
          <td colspan="4">No players in the building.</td>
        </tr>
        <tr ng-repeat="player in players">
          <td>{{ player.first_name }}</td>
          <td>{{ player.last_name }}</td>
          <td>{{ player.reason }}</td>
            <td><a class="btn btn-Info" ng-click="editPlayer($index)">Edit</a></td>
          <td><a class="btn btn-danger" ng-click="deletePlayer($index)">Remove</a></td>
     
        </tr>
      </tbody>
    </table>

  </div>
</div>
